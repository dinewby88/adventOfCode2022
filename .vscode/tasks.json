{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",  //generates complete debug information
                "/EHsc",    //exception handling model
                "/nologo",  //supress startup banner
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",    //renames executable file
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "BUILD AND LINK ALL",
            "command": "cl.exe",
            "args": [
                "/Zi",  //generates complete debug information
                "/EHsc",    //exception handling model
                "/nologo",  //supress startup banner
                "${fileDirname}\\*.c",
                "/Fe${fileDirname}\\combined.exe",    //renames executable file
                "/link",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}